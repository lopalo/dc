#:kivy 1.7.2
#:import W kivy.core.window.Window


<StartMenu@BoxLayout>:
    height: W.height / 2
    width: W.width / 2
    center_x: W.width / 2
    center_y: W.height / 2
    orientation: 'vertical'
    spacing: 10
    padding: 20
    Label:
        text: 'Address:'
    TextInput:
        id: address
        multiline: False
        text: 'ws://127.0.0.1:10501'
    Label:
        text: 'Name:'
    TextInput:
        id: username
        multiline: False
        text: 'anonymous'
    Button:
        text: 'Connect'
        on_press: root.connect(address=address.text, username=username.text)

<MainWidget>:
    start_menu: start_menu
    size: W.size
    StartMenu:
        id: start_menu

<GameWidget>:
    ui: ui
    UI:
        id: ui
